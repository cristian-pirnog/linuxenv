#!/bin/bash

source ~/.userfunctions
	
usageMsg="Usage: $(basename ${0}) [roc|ron] <Release|Debug> [buildOptions]"
if [[ $# -lt 1 ]]; then
    echo ${usageMsg}
    exit 1
else
    case ${1} in
	'roc')
	    client=rocardian
	    shift
	    ;;
	'ron')
	    client=ronin
	    shift
	    ;;
	'Release'|'Debug')
	    client=rocardian
	    ;;
	*)
	    echo ${usageMsg}
	    exit 1
	    ;;
    esac
fi

buildType=${1}
shift 1

#if [[ $(pwd) != "${HOME}/code" ]]; then
#    cd ~/code
#fi

dependencies="katania balerion/strategy balerion/optimizer ${client}/support ${client}/optimizer unit_tests/katania ${client}/live"

## Add portfolio build, only if not specified in the environment otherwise
if [[ ${SKIP_PORTFOLIO_BUILD} -ne 1 ]]; then
    dependencies="${dependencies} drogon/src/C"
fi

threadCount=$(($(nproc) - 1))

for d in ${dependencies}; do
    cd $d && build -s -j${threadCount} ${buildType} $* || exit 1
    cd ->/dev/null
done
