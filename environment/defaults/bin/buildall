#!/bin/bash

source ~/.userfunctions
	
usageMsg="Usage: $(basename ${0}) [roc|ron] <Release|Debug> [buildOptions]"
if [[ $# -lt 1 ]]; then
    echo ${usageMsg}
    exit 1
else
    case ${1} in
	'roc')
	    client=rocardian
	    shift
	    ;;
	'ron')
	    client=ronin
	    shift
	    ;;
	'Release'|'Debug')
	    client=rocardian
	    ;;
	*)
	    echo ${usageMsg}
	    exit 1
	    ;;
    esac
fi

buildType=${1}
shift 1

#if [[ $(pwd) != "${HOME}/code" ]]; then
#    cd ~/code
#fi

dependencies="katania balerion/strategy balerion/optimizer balerion/live ${client}/support ${client}/optimizer ${client}/live" # unit_tests/katania"

## Add portfolio build, only if not specified in the environment otherwise
if [[ ${SKIP_PORTFOLIO_BUILD} -ne 1 ]]; then
    dependencies="${dependencies} drogon/src/C"
fi

threadCount=$(($(nproc) - 1))
if [[ ${threadCount} < 1 ]]; then
    threadCount=1
fi

if [[ -n $(echo $@ | grep -P '( |^)fresh( |$)') ]]; then
    for d in ${dependencies}; do
        rm -rf ${d}/${buildType}
    done
    ARGS=$(echo $@ | replace 'fresh' '')
    eval set -- $ARGS
    echo $@
fi

for d in ${dependencies}; do
    cd $d && build -s -j${threadCount} ${buildType} $* --client ${client} || exit 1
    cd ->/dev/null
done
