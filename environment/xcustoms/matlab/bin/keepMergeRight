#!/bin/bash


if [ $# -lt 1 ]; then
    echo "Usage: `basename $0` fileName"
    exit 1
fi

myFileFromMerge=`ls $1.merge-right*`

#-# echo "About to replace:
#-# source file: $myFileFromMerge
#-# target file: $1"
#-# echo "Continue? [y/n]"
#-# read myAnswer
#-# 
#-# if [ $myAnswer != "y" ]; then
#-#     echo "Aborting on user's request"
#-#     exit 0
#-# fi

cp $myFileFromMerge $1

svn resolved $1
