alias cdb='cd ~/deploy/master/Release/bin'
alias codb='cd ~/code/go/src/bitbucket.org/devicetools'
alias codd='cd ~/code/go/src/bitbucket.org/devicetools/devmanagement'
alias codg='cd ~/code/go/src/bitbucket.org/devicetools/golib'
alias codm='cd ~/code/go/src/bitbucket.org/devicetools/management'
alias codp='cd ~/code/go/src/bitbucket.org/devicetools/provider'
alias codpo='cd ~/code/go/src/bitbucket.org/devicetools/pontus2'
